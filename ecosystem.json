{
  "apps" : [{
    "name"      : "TODO JWT API",
    "script"    : "app.js",
    "env": {
      "COMMON_VARIABLE": "true"
    },
    "env_production" : {
      "NODE_ENV": "production"
    }
  },{
    "name"      : "TODO FRONTEND",
    "script"    : "frontend.js"
  }],
  "deploy" : {
    "production" : {
      "user" : "todo-jwt",
      "host" : "localhost",
      "ref"  : "origin/master",
      "repo" : "https://github.com/Maltronic/todo-jwt.git",
      "path" : "/",
      "post-deploy" : "npm install && pm2 startOrRestart ecosystem.json --env production"
    },
    "dev" : {
      "user" : "todo-jwt",
      "host" : "localhost",
      "ref"  : "origin/master",
      "repo" : "https://github.com/Maltronic/todo-jwt.git",
      "path" : "/",
      "post-deploy" : "npm install && pm2 startOrRestart ecosystem.json --env dev",
      "env"  : {
        "NODE_ENV": "dev"
      }
    }
  }
}
